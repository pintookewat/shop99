<div class="row">
  <div class="col-2">
    <%= render "layouts/side_navbar" %>
  </div>
  <div class="col-9 ml-5 mt-5">
    <%= form_with(model: product) do |form| %>
    <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div>
      <%= form.hidden_field :user_id, value: current_user.id %>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, placeholder: 'Enter your Name', autofocus: true, autocomplete: "email",class:"form-control" %>
    </div>
    <div>
      <%= form.label :price, class: "mt-2", style: "display: block" %>
      <%= form.text_field :price, placeholder: 'Enter your Price', autofocus: true, autocomplete: "email",class:"form-control" %>
    </div>
    <div>
      <%= form.label :description, class: "mt-2", style: "display: block" %>
      <%= form.text_field :description, placeholder: 'Enter your Description', autofocus: true, autocomplete: "email",class:"form-control" %>
    </div>
    <div>
      <%= form.label :object, "Object type", class: "mt-3 text-center" %><br />
      <%= form.select :object, options_for_select([["Select One", ""], "Groceries", "Toys", "House Hold", "Daily use", "Other"]),{}, class:'form-control' %>
    </div>
    <div>
      <%= form.label :images, class: "mt-2", style: "display: block" %>
      <%= form.file_field :images, placeholder: 'image', autofocus: true, autocomplete: "email",class:"form-control" %>
    </div>
    <div class="text-center mt-4">
      <% if params[:action] == 'new' %>
      <%= form.submit "Create", class: "btn bg-gradient-info text-center  ml-5" %>
      <% else %>
      <%= form.submit "Update", class: "btn bg-gradient-info text-center mt-2 ml-5" %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>