
<div class="container-fluid">
<%= form_with(model: qrcode) do |form| %>
  <% if qrcode.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(qrcode.errors.count, "error") %> prohibited this qrcode from being saved:</h2>

      <ul>
        <% qrcode.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.label :name, class: "mt-2" %>
    <%= form.text_field :name, placeholder: 'Enter your Name', autofocus: true, autocomplete: "email",class:"form-control w-50" %>
  </div>


  <div>
    <%= form.label :location, style: "display: block", class: "mt-2" %>
    <%= form.text_field :location, placeholder: 'Enter your Location', autofocus: true, autocomplete: "email",class:"form-control w-50" %>
  </div>
  <div>
    <%= form.label :color, "Select your color", class: "mt-3" %>
    <%= form.text_field :color, placeholder: 'Enter your Location', autofocus: true, autocomplete: "email",class:"form-control ",  style: "height:40px; width:70px", type: "color" %>
  </div>
  <div>
    <%= form.submit "Create", class: "btn btn-success text-center mt-2" %>
  </div>
<% end %>
</div>
<%= render "layouts/footer" %>